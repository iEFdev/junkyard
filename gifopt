#!/usr/bin/env bash
#
# /usr/local/xbin/gifopt
#
# Description: A script to automate 'gifsicle' to optimize GIF
# images.
#
# ------------------------------------------------------------
#
# Usage:
#	gifopt [-v] [-c <int>] <file(s)>        1 or more files
#	gifopt -h                               Show help
#

ERR=0;
V=0;
vb='';
C=''

# Help
[[ $# < 1 || $1 == '-h' ]] && cat $0 | sed -n '10,12p' && exit 1;

# Verbose
[[ $1 == '-v' ]] && V=1 && shift 1;

# Colors ?
[[ $1 == '-c' ]] && C="--colors $2 " && shift 2;

# Check dependencies
for dep in gifsicle; do
	[[ ! `type ${dep} 2>/dev/null` ]] && echo -e ":: You must install '${dep}' to continue." && ERR=1;
done
[[ ${ERR} == 1 ]] && echo -e "\nAborting..." && exit ${ERR};

# Pick or delete
function isOptimized()
{
	local img1="$1";
	local img2="$2";

    size1=$(ls -al "${img1}" 2> /dev/null | awk '{ print $5;}');
    size2=$(ls -al "${img2}" 2> /dev/null | awk '{ print $5;}');

    if [ ${size2} -lt ${size1} ]; then
        procentage=$(echo "scale=2; (${size2} * 100 / ${size1}) - 100" | bc);
        echo ":: Optimized! (${procentage//-/}%)";
        [[ $V != 0 ]] && echo -en "Renaming: " && vb='-v ';
        mv ${vb}"${img2}" "${img2%.*}";
    else
        echo ':: Keeping the original...';
        [[ $V != 0 ]] && echo -n "Deleting: " && vb='-v ';
        rm ${vb}"${img2}";
    fi
}

# Loop $@
for file in "$@"; do
	[[ -f "${file}" && "${file##*.}" != 'gif' ]] && echo "It's not an gif image. Skipping...";

	if [[ -f "${file}" ]]; then
        gifsicle ${C}-O3 "${file}" -o "${file}.opt";
        isOptimized "${file}"{,.opt};
	else
		echo "$(basename $0): '${file}' doesn't exist";
		ERR=1;
	fi
done

exit ${ERR};